@model List<ProjectSevenDayNight.Models.DataModels.Faq>
@{
    ViewBag.Title = "FAQ List";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<br />
<br />
<br />
<br />

<div class="col-md-12">
    <div class="card">
        <div class="card-header">
            <div class="d-flex align-items-center">
                <h4 class="card-title">FAQ List</h4>
                <div class="ms-auto d-flex gap-2">
                    <button type="button" class="btn btn-info btn-round" id="quickGenerateBtn">
                        <i class="fa fa-magic"></i> Quick Generate FAQ
                    </button>
                    <a href="/Faq/CreateFaq" class="btn btn-primary btn-round">
                        <i class="fa fa-plus"></i> Add FAQ
                    </a>
                </div>
            </div>
        </div>

        <div class="card-body">
            <div class="table-responsive">
                <table id="add-row" class="display table table-striped table-hover">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Title</th>
                            <th>Subtitle</th>
                            <th>Question</th>
                            <th>Answer</th>
                            <th style="width: 10%">Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.FaqId</td>
                                <td>@item.Title</td>
                                <td>@item.Subtitle</td>
                                <td>@item.Question</td>
                                <td>@item.Answer</td>
                                <td>
                                    <div class="form-button-action d-flex gap-2">
                                        <a href="/Faq/UpdateFaq/@item.FaqId"
                                           class="btn btn-primary d-flex align-items-center gap-1"
                                           data-bs-toggle="tooltip"
                                           title="Edit">
                                            <i class="fa fa-edit"></i> <span>Update</span>
                                        </a>
                                        <a href="/Faq/DeleteFaq/@item.FaqId"
                                           class="btn btn-danger d-flex align-items-center gap-1"
                                           data-bs-toggle="tooltip"
                                           title="Delete"
                                           onclick="return confirm('Are you sure you want to delete?');">
                                            <i class="fa fa-times"></i> <span>Delete</span>
                                        </a>
                                    </div>

                                </td>

                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<!-- Quick FAQ Generation Modal -->
<div class="modal fade" id="quickGenerateModal" tabindex="-1">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Quick Generate FAQ</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <div class="mb-3">
                    <label class="form-label">Title</label>
                    <input type="text" class="form-control" id="quickTitle" placeholder="FAQ Title">
                </div>
                <div class="mb-3">
                    <label class="form-label">Subtitle</label>
                    <input type="text" class="form-control" id="quickSubtitle" placeholder="FAQ Subtitle">
                </div>
                <div class="mb-3">
                    <label class="form-label">Question</label>
                    <textarea class="form-control" id="quickQuestion" rows="3" placeholder="Question text..."></textarea>
                </div>
                <div class="mb-3">
                    <label class="form-label">Answer</label>
                    <textarea class="form-control" id="quickAnswer" rows="5" placeholder="Answer text..."></textarea>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-primary" id="saveQuickFaq">Save</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            // Quick FAQ generate button
            $('#quickGenerateBtn').click(function () {
                var btn = $(this);
                var originalText = btn.html();
                
                btn.prop('disabled', true).html('<i class="fa fa-spinner fa-spin"></i> Generating...');
                
                $.ajax({
                    url: '/Faq/GenerateQuestion',
                    type: 'POST',
                    success: function (response) {
                        if (response.success) {
                            $('#quickQuestion').val(response.question);
                            $('#quickAnswer').val(response.answer);
                            $('#quickTitle').val('Auto Generated FAQ');
                            $('#quickSubtitle').val('Generated by AI');
                            $('#quickGenerateModal').modal('show');
                        } else {
                            showAlert('Error: ' + response.message, 'danger');
                        }
                    },
                    error: function () {
                        showAlert('API connection error!', 'danger');
                    },
                    complete: function () {
                        btn.prop('disabled', false).html(originalText);
                    }
                });
            });

            // Quick FAQ save
            $('#saveQuickFaq').click(function () {
                var faqData = {
                    Title: $('#quickTitle').val(),
                    Subtitle: $('#quickSubtitle').val(),
                    Question: $('#quickQuestion').val(),
                    Answer: $('#quickAnswer').val()
                };

                $.ajax({
                    url: '/Faq/CreateFaq',
                    type: 'POST',
                    data: faqData,
                    success: function () {
                        $('#quickGenerateModal').modal('hide');
                        showAlert('FAQ saved successfully!', 'success');
                        setTimeout(function () {
                            location.reload();
                        }, 1500);
                    },
                    error: function () {
                        showAlert('Error occurred while saving!', 'danger');
                    }
                });
            });

            function showAlert(message, type) {
                var alertHtml = '<div class="alert alert-' + type + ' alert-dismissible fade show" role="alert">' +
                    message +
                    '<button type="button" class="btn-close" data-bs-dismiss="alert"></button>' +
                    '</div>';
                
                $('.card-body').prepend(alertHtml);
                
                // Auto close after 5 seconds
                setTimeout(function () {
                    $('.alert').alert('close');
                }, 5000);
            }
        });
    </script>
} 