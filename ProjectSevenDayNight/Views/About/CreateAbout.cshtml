@model ProjectSevenDayNight.Models.DataModels.About
@{
    ViewBag.Title = "CreateAbout";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<br>
<br>
<br>

<h3>Add About</h3>

<form asp-action="CreateAbout" method="post">
    <div class="mb-3">
        <label for="Subtitle" class="form-label">Subtitle</label>
        <input asp-for="Subtitle" class="form-control" />
        <span asp-validation-for="Subtitle" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label for="Title" class="form-label">Title</label>
        <input asp-for="Title" class="form-control" />
        <span asp-validation-for="Title" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label for="Description" class="form-label">Description</label>
        <textarea asp-for="Description" class="form-control" rows="4"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label for="BulletPoint1" class="form-label">Bullet Point 1</label>
        <input asp-for="BulletPoint1" class="form-control" />
    </div>
    <div class="mb-3">
        <label for="BulletPoint2" class="form-label">Bullet Point 2</label>
        <input asp-for="BulletPoint2" class="form-control" />
    </div>
    <div class="mb-3">
        <label for="BulletPoint3" class="form-label">Bullet Point 3</label>
        <input asp-for="BulletPoint3" class="form-control" />
    </div>
    <div class="mb-3">
        <label for="ButtonText" class="form-label">Button Text</label>
        <input asp-for="ButtonText" class="form-control" />
    </div>

    <button type="submit" class="btn btn-success">Save</button>
    <a href="/About/AboutList" class="btn btn-secondary ms-2">Ingore</a>
</form>

@section Scripts {
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.5/jquery.validate.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate-unobtrusive/3.2.12/jquery.validate.unobtrusive.min.js"></script>
}

