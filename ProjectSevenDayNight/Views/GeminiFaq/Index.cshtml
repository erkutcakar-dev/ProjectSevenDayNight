@model List<ProjectSevenDayNight.Models.DataModels.GeminiFaq>
@{
    ViewBag.Title = "Gemini FAQ List";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h3>Frequently Asked Questions (Generated by Gemini 2.5 Flash)</h3>
<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>#</th>
            <th>Question</th>
            <th>Answer</th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null && Model.Count > 0)
        {
            int i = 1;
            foreach (var faq in Model)
            {
                <tr>
                    <td>@i</td>
                    <td>@faq.Question</td>
                    <td>@faq.Answer</td>
                </tr>
                i++;
            }
        }
        else
        {
            <tr><td colspan="3">No FAQ found.</td></tr>
        }
    </tbody>
</table> 