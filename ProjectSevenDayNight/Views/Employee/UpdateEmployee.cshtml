@model ProjectSevenDayNight.Models.DataModels.Employee

@{
    ViewBag.Title = "Update Employee";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h3>@ViewBag.Title</h3>

@using (Html.BeginForm("UpdateEmployee", "Employee", FormMethod.Post, new { @class = "mt-4" }))
{
    @Html.HiddenFor(m => m.EmployeeId)

    <div class="mb-3">
        <label class="form-label">Başlık</label>
        @Html.TextBoxFor(m => m.Title, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Title, "", new { @class = "text-danger" })
    </div>

    <div class="mb-3">
        <label class="form-label">Alt Başlık</label>
        @Html.TextBoxFor(m => m.Subtitle, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Subtitle, "", new { @class = "text-danger" })
    </div>

    <div class="mb-3">
        <label class="form-label">Resim URL</label>
        @Html.TextBoxFor(m => m.ImageUrl, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.ImageUrl, "", new { @class = "text-danger" })
    </div>

    <div class="mb-3">
        <label class="form-label">Ad Soyad</label>
        @Html.TextBoxFor(m => m.NameSurname, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.NameSurname, "", new { @class = "text-danger" })
    </div>

    <div class="mb-3">
        <label class="form-label">Meslek</label>
        @Html.TextBoxFor(m => m.Job, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Job, "", new { @class = "text-danger" })
    </div>

    <button type="submit" class="btn btn-primary">Güncelle</button>
    <a href="/Employee/EmployeeList" class="btn btn-secondary ms-2">İptal</a>
}

@section Scripts {
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.5/jquery.validate.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate-unobtrusive/3.2.12/jquery.validate.unobtrusive.min.js"></script>
} 