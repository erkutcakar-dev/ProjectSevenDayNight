@using ProjectSevenDayNight.Helpers
@model List<ProjectSevenDayNight.Models.DataModels.Service>


<div class="container-fluid service py-5">
    <div class="container py-5">
        <div class="text-center mx-auto pb-5 wow fadeInUp" data-wow-delay="0.2s" style="max-width: 800px;">
            <h4 class="text-primary">@SimpleResourceHelper.GetString("ServicesTitle")</h4>
            <h1 class="display-4 mb-4">@SimpleResourceHelper.GetString("ServicesSubtitle")</h1>
            <p class="mb-0">@SimpleResourceHelper.GetString("ServicesDescription")</p>
        </div>
        

        <div class="row g-4 justify-content-center">
            @foreach (var item in Model)
            {
                <div class="col-6 col-sm-4 col-md-3 col-lg-2 wow fadeInUp" data-wow-delay="0.2s">
                    <div class="service-item">
                        <div class="service-img">
                            <img src="@item.CardImageUrl" class="img-fluid rounded-top w-100" alt="">
                            <div class="service-icon p-3">
                                <i class="fa fa-users fa-2x"></i>
                            </div>
                        </div>
                        <div class="service-content p-3">
                            <div class="service-content-inner">
                                <a href="#" class="d-inline-block h5 mb-2">@item.CardTitle</a>
                                <p class="mb-3">@item.CardDescription</p>
                                <a class="btn btn-primary rounded-pill py-2 px-3" href="#">Read More</a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>

        <div class="col-12 text-center wow fadeInUp mt-5" data-wow-delay="0.2s">
            <a class="btn btn-primary rounded-pill py-3 px-5" href="#">More Services</a>
        </div>
    </div>
</div>

