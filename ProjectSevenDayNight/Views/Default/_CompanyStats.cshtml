@model List<ProjectSevenDayNight.Models.DataModels.CompanyStats>

<div class="col-xl-6 wow fadeInRight" data-wow-delay="0.2s">
    <div class="bg-white rounded p-5 h-100">
        <div class="row g-4 justify-content-center">
            <div class="col-12">
                <div class="rounded bg-light">
                    <img src="/Content/LifeSure-1.0.0/img/about-1.png" class="img-fluid rounded w-100" alt="">
                </div>
            </div>

            @foreach (var item in Model)
            {
                <div class="col-sm-6">
                    <div class="counter-item bg-light rounded p-3 h-100">
                        <div class="counter-counting">
                            <span class="text-primary fs-2 fw-bold" data-toggle="counter-up">@item.Value.ToString() @item.Unit</span>
                            <span class="h1 fw-bold text-primary">+</span>
                        </div>
                        <h4 class="mb-0 text-dark">@item.Title</h4>
                    </div>
                </div>
            }
        </div>
    </div>
</div>
