@using ProjectSevenDayNight.Helpers
@model List<ProjectSevenDayNight.Models.DataModels.Faq>

<div class="container-fluid faq-section bg-light py-5">
    <div class="container py-5">
        <div class="mb-5 text-center">
            <h4 class="text-primary">@SimpleResourceHelper.GetString("FAQTitle")</h4>
            <h1 class="display-4 mb-0">@SimpleResourceHelper.GetString("FAQSubtitle")</h1>
        </div>

        <div class="row g-5">
            @{
                // Soruları ikiye böl
                var firstHalf = Model.Take(10).ToList();
                var secondHalf = Model.Skip(10).Take(10).ToList();

                int index = 0;
            }
            <div class="col-md-6">
                <div class="accordion" id="accordionExampleLeft">
                    @foreach (var item in firstHalf)
                    {
                        var collapseId = "collapseLeft" + index;
                        var headingId = "headingLeft" + index;
                        var isFirst = index == 0;

                        <div class="accordion-item">
                            <h2 class="accordion-header" id="@headingId">
                                <button class="accordion-button border-0 @(isFirst ? "" : "collapsed")" type="button" data-bs-toggle="collapse" data-bs-target="#@collapseId" aria-expanded="@(isFirst.ToString().ToLower())" aria-controls="@collapseId">
                                    @item.T("Question")
                                </button>
                            </h2>
                            <div id="@collapseId" class="accordion-collapse collapse @(isFirst ? "show" : "")" aria-labelledby="@headingId" data-bs-parent="#accordionExampleLeft">
                                <div class="accordion-body rounded">
                                    @item.T("Answer")
                                </div>
                            </div>
                        </div>

                        index++;
                    }
                </div>
            </div>

            <div class="col-md-6">
                <div class="accordion" id="accordionExampleRight">
                    @{
                        int indexRight = 0;
                    }
                    @foreach (var item in secondHalf)
                    {
                        var collapseId = "collapseRight" + indexRight;
                        var headingId = "headingRight" + indexRight;
                        var isFirst = indexRight == 0;

                        <div class="accordion-item">
                            <h2 class="accordion-header" id="@headingId">
                                <button class="accordion-button border-0 @(isFirst ? "" : "collapsed")" type="button" data-bs-toggle="collapse" data-bs-target="#@collapseId" aria-expanded="@(isFirst.ToString().ToLower())" aria-controls="@collapseId">
                                    @item.T("Question")
                                </button>
                            </h2>
                            <div id="@collapseId" class="accordion-collapse collapse @(isFirst ? "show" : "")" aria-labelledby="@headingId" data-bs-parent="#accordionExampleRight">
                                <div class="accordion-body rounded">
                                    @item.T("Answer")
                                </div>
                            </div>
                        </div>

                        indexRight++;
                    }
                </div>
            </div>
        </div>

        <div class="row mt-5">
            <div class="col-12 text-center">
                <img src="/Content/LifeSure-1.0.0/img/carousel-2.png" class="img-fluid" style="max-width: 400px;" alt="FAQ Image" />
            </div>
        </div>
    </div>
</div>
